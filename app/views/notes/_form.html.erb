<%= simple_form_for([@notable, @note], :html => { :class => "data_form" }, :remote => true) do |f| %>
  
  <div class="modal-header">
  	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  	<h3><%= t(:note) %></h3>
  </div>
  
  <div class="form-inputs modal-body">
  	<%= f.error_notification %>
  	<%= f.hidden_field :notable_id %>
  	<%= f.hidden_field :created_by %>
  	<%= f.input :content, :as => :text, :autofocus => true, :input_html => { :rows => '5', :class => 'span12', :maxlength => 250 } %>
  </div>

  <div class="modal-footer">
  	<%= f.button :submit, t(:save), :class => "btn btn-hb" %>
  	<button type="button" class="btn" data-dismiss="modal" aria-hidden="true"><%= t(:cancel) %></button>
  </div>
<% end %>
