<div class="offset3 span6 object-block">
<div class="page-header">
	<h1>Sign In</h1>
	<p>Enter your email and password below to sign into your account.</p>
</div>

<% if !flash[:alert].nil? %>
	<div class="alert alert-error"><%= flash[:alert] %></div>
<% end %>
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-vertical' }) do |f| %>
  
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true %>
    <%= f.input :password, :required => false %>
    <%= f.input :remember_me, :as => :boolean, :label => false, :inline_label => true if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign In", :class => 'btn btn-hb' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
