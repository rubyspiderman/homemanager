<div class="page-header">
	<h1>Change My Password</h1>
	<p>Want to change your password? Enter your existing password and a new password below.</p>
</div>
		
<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form-vertical'  }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, :label => "New password", :required => true, :autofocus => true %>
    <%= f.input :password_confirmation, :label => "Confirm your new password", :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update", :class => 'btn btn-hb' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>