<%= simple_form_for(@inventory_item, :html => { :class => 'data_form' }, :remote => true) do |f| %>
   	<%= f.hidden_field :binder_id %>
  	<%= f.hidden_field :created_by %>
  	
	<div class="modal-header">
  		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  		<h3><%= t(:inventory_item) %></h3>
  	</div>

	<div class="modal-body">
  		<%= f.error_notification %>
  		<%= f.input :name, :autofocus => true, :input_html => { :class => 'span8' } %>
  		<%= f.input :inventory_type, :input_html => { :autocomplete => 'off', :class => 'autocomplete', :data => { :name => "inventory_type", :local => InventoryItemType.available(current_user.id), :span => "span8" }} %><br /><br />
  		<%= f.input :value, :input_html => { :class => 'span8' } %>
  		<%= f.input :details, :as => :text, :input_html => { :rows => 5, :class => 'span8' } %>
	</div>

  	<div class="modal-footer">
  		<%= f.button :submit, t(:save), :class => "btn btn-hb" %>
  		<button type="button" class="btn" data-dismiss="modal" aria-hidden="true"><%= t(:cancel) %></button>
  	</div>
<% end %>
