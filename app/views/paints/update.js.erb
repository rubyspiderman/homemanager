<% if @paint.errors.any? %>
	
	prepareEditForm('paint', "<%= escape_javascript(render(:partial => "form"))%>");

<% else %>

	closeDataForm();
	updateDataTable(
		"<%= escape_javascript(render(:partial => "shared/resource_index", :locals => { :resources => @paints })) %>",
		"<%= @paints.count %>");

<% end %>