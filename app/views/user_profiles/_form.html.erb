<%= simple_form_for(@user_profile, :html => { :class => 'form-horizontal' }) do |f| %>
	<%= f.error_notification %>
	<%= f.input :first_name, :input_html => { :class => 'span12' } %>
	<%= f.input :last_name, :input_html => { :class => 'span12' } %>
	<%= f.simple_fields_for :address do |a| %>
		<%= a.hidden_field :name, :value => 'home' %>
		<%= render partial: 'addresses/form_for', object: a, as: :f %>
  	<% end %>
	<%= f.input :home_phone, :input_html => { :class => 'span12' } %>
	<%= f.input :mobile_phone, :input_html => { :class => 'span12' } %>
	<%= f.input :dob, :id => :show_date, :start_year => Date.current.year - 100, :end_year => Date.current.year, :input_html => { :class => 'span4' } %>
	<div class='control-group'>
		<div class='controls'>
			<%= f.input_field :sex, :as => :radio_buttons, collection: [['Male','m'], ['Female','f']] %>
		</div>
	</div>
	<%= f.input :monthly_email, as: :boolean, checked_value: true, unchecked_value: false %>
	
	<div class='form-actions'>
		<%= f.button :submit, 'Save', :class => 'btn btn-hb' %>
		<%= link_to 'Cancel', @user_profile, :class => 'btn' %>
	</div>
<% end %>